{
    "name": "TS-sequelize-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate code to get started with express + sequlize + Postgres",
    "main": "index.js",
    "author": "Sanket Mohapatra",
    "license": "MIT",
    "module": "",
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.14",
        "@types/morgan": "^1.9.3",
        "@types/node": "^18.11.9",
        "@types/nodemailer": "^6.4.6",
        "@types/validator": "^13.7.10",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": ">=6",
        "lint-staged": ">=10",
        "prettier": "^2.7.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.8.4"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --fix --ignore-path  .gitignore .",
            "eslint --fix"
        ],
        "**/*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --fix --ignore-path  .gitignore .",
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    },
    "scripts": {
        "prepare": "husky install",
        "start:dev": "ts-node-dev index.ts",
        "start:": "node ./dist/index.js",
        "build": "tsc",
        "start:prod": "yarn build && NODE_ENV=production pm2 start ./dist/index.js"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "joi": "^17.7.0",
        "kafkajs": "^2.2.2",
        "morgan": "^1.10.0",
        "nodemailer": "^6.8.0",
        "pg": "^8.8.0",
        "reflect-metadata": "^0.1.13",
        "sequelize": "^6.25.3",
        "sequelize-typescript": "^2.1.5",
        "winston": "^3.8.2"
    }
}
